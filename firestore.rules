    // Only suitable for internal, trusted environments

    match /players/{playerId} {
      allow read, write: if true;
    }

    match /matches/{matchId} {
      allow read, write: if true;
    }

    match /eloHistory/{historyId} {
      allow read, write: if true;
    }
  }
}
